<h1> <%= @game.name %> </h1>

<div>
  <!-- top content container -->
  <div>
    <!-- image container -->
    <div>
      <div>
        <img src="">
      </div>
    </div>
    <!-- description container -->
    <div>
      <div>
        <p> <%= @game.description %> </p>
      </div>
    </div>
  </div>
  <!-- bottom half container -->
  <div>
    <!-- add button to add -->
  </div>
  <div>
    <!-- container for comments -->
    <div>
      <h5>Comments</h5>
      <ul>
        <% @game.comments.each do |comment| %>
          <% comment_user = User.find(comment.user_id) %>
          <li> <%= comment.content %> ~ <%= link_to comment_user.username, user_path(comment_user) %> </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
