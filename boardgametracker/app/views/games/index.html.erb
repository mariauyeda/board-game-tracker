<h1>Board Game Tracker</h1>

<h3>All Games</h3>
  <div>
    <% @games.each do |game| %>
    	<div class="container">
        <div class="game_list_container">
          <div class="vote_container">
            <%= button_to 'up', game_up_path(game), {class: 'materials-icons up'} %>
            <p class="vote_counts"><%= game.tally %></p>
            <%= button_to 'down', game_down_path(game), {class: 'materials-icons down'} %>
          </div>
          <div class="game_content_container">
            <%= link_to game.name, game_path(game) %>
          </div>
        </div>
      </div>
    <% end %>
  </div>

